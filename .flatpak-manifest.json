{
    "id": "org.kde.kitinerary-extractor",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "kitinerary-extractor",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": ["--filesystem=host:ro"],
    "modules": [
        {
            "name": "poppler",
            "config-opts": [
                "-DENABLE_TESTING=OFF",
                "-DENABLE_UNSTABLE_API_ABI_HEADERS=ON",
                "-DENABLE_BOOST=OFF",
                "-DENABLE_CPP=OFF",
                "-DENABLE_GLIB=OFF",
                "-DENABLE_GOBJECT_INTROSPECTION=OFF",
                "-DENABLE_LIBCURL=OFF",
                "-DENABLE_UTILS=OFF",
                "-DENABLE_QT5=OFF",
                "-DENABLE_QT6=OFF",
                "-DENABLE_SPLASH=OFF",
                "-DWITH_Cairo=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/mirrors/poppler.git",
                    "branch": "master"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "libphonenumer",
            "buildsystem": "cmake-ninja",
            "subdir": "cpp",
            "config-opts": [
                "-DUSE_BOOST=OFF",
                "-DBUILD_TESTING=OFF",
                "-DREGENERATE_METADATA=OFF",
                "-DBUILD_STATIC_LIB=ON",
                "-DBUILD_SHARED_LIBS=OFF",
                "-DUSE_PROTOBUF_LITE=ON",
                "-DBUILD_GEOCODER=OFF",
                "-DFETCHCONTENT_FULLY_DISCONNECTED=ON",
                "-DCMAKE_POSITION_INDEPENDENT_CODE=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/google/libphonenumber/archive/refs/tags/v9.0.13.tar.gz",
                    "sha256": "46400323d2df4fdefd57bc46a34111dc2c4612da62ecd0cedebff5ad94e49b0b",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 89344,
                        "stable-only": true,
                        "url-template": "https://github.com/google/libphonenumber/archive/refs/tags/v$version.tar.gz"
                    }
                }
            ],
            "cleanup": [
                "/include",
                "/lib/*.a",
                "/lib/cmake"
            ],
            "modules": [
                {
                    "name": "abseil-cpp",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-DCMAKE_BUILD_TYPE=Release",
                        "-DABSL_PROPAGATE_CXX_STD=ON",
                        "-DBUILD_SHARED_LIBS=OFF",
                        "-DCMAKE_POSITION_INDEPENDENT_CODE=ON"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/abseil/abseil-cpp/archive/refs/tags/20250814.0.tar.gz",
                            "sha256": "9b2b72d4e8367c0b843fa2bcfa2b08debbe3cee34f7aaa27de55a6cbb3e843db",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 115295,
                                "stable-only": true,
                                "url-template": "https://github.com/abseil/abseil-cpp/archive/refs/tags/$version.tar.gz"
                            }
                        }
                    ],
                    "cleanup": [
                        "/include",
                        "/lib/*.a",
                        "/lib/cmake",
                        "/lib/pkgconfig"
                    ]
                },
                {
                    "name": "protobuf",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-Dprotobuf_BUILD_TESTS=OFF",
                        "-Dprotobuf_LOCAL_DEPENDENCIES_ONLY=ON",
                        "-DBUILD_SHARED_LIBS=OFF",
                        "-DCMAKE_POSITION_INDEPENDENT_CODE=ON"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/protocolbuffers/protobuf/archive/refs/tags/v32.1.tar.gz",
                            "sha256": "d2081ab9528292f7980ef2d88d2be472453eea4222141046ad4f660874d5f24e",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 3715,
                                "stable-only": true,
                                "url-template": "https://github.com/protocolbuffers/protobuf/archive/refs/tags/v$version.tar.gz"
                            }
                        }
                    ],
                    "cleanup": [
                        "/bin",
                        "/include",
                        "/lib/*.a",
                        "/lib/*.la",
                        "/lib/libprotoc*",
                        "/lib/libprotobuf-lite*",
                        "/lib/cmake",
                        "/lib/pkgconfig"
                    ]
                }
            ]
        },
        {
            "name": "kpkpass",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/pim/kpkpass",
                    "branch": "master"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/mkspecs",
                "/share/qlogging-categories6"
            ]
        },
        {
            "name": "kmime",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/pim/kmime",
                    "branch": "master"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/mkspecs",
                "/share/qlogging-categories6"
            ]
        },
        {
            "name": "zxing",
            "config-opts": [
                "-DBUILD_DEPENDENCIES=LOCAL",
                "-DBUILD_SHARED_LIBS=OFF",
                "-DBUILD_UNIT_TESTS=OFF",
                "-DBUILD_BLACKBOX_TESTS=OFF",
                "-DBUILD_EXAMPLES=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "cleanup": [
                "/include",
                "*.pc",
                "/lib/cmake",
                "libZXing.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/zxing-cpp/zxing-cpp/archive/v2.3.0.tar.gz",
                    "sha256": "64e4139103fdbc57752698ee15b5f0b0f7af9a0331ecbdc492047e0772c417ba",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 376699,
                        "stable-only": true,
                        "url-template": "https://github.com/zxing-cpp/zxing-cpp/archive/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "kitinerary",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DBUILD_TOOLS=OFF",
                "-DKITINERARY_STANDALONE_CLI_EXTRACTOR=ON"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/lib/libexec",
                "/mkspecs",
                "/share/qlogging-categories6"
            ]
        },
        {
            "name": "icon",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/icons/hicolor/32x32/apps/",
                "install -D /usr/share/icons/breeze/actions/22/map-globe.svg /app/share/icons/hicolor/32x32/apps/"
            ]
        }
    ]
}
